{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b packages",
    "watch": "tsc -b -w packages",
    "fmt": "prettier --parser=typescript --write packages/**/*.ts",
    "test": "jest --colors"
  },
  "gitHooks": {
    "pre-commit": "ls-lint && lint-staged"
  },
  "lint-staged": {
    "*.{js,json,yml}": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "devDependencies": {
    "@ls-lint/ls-lint": "^1.9.2",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "jest": "^26.2.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  },
  "dependencies": {},
  "license": "MIT"
}
